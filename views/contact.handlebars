<div class="page-header">
  <h3>Contact Us</h3>
</div>
<div class="contactUs">
  <form class="contact" action="/contactForm" method="POST">
    <ul style="list-style-type: none">
      <li>
        <div class="form-group">
          <label for="fieldName" class="col-sm-2 control-label">Name</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="fieldName" name="name" placeholder="*Name" required>
          </div>
        </div><!-- End of form-group -->
      </li>
      <br><br>
      <li>
        <div class="form-group">
          <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="fieldEmail" name="email" placeholder="*Email" required>
          </div>
        </div><!-- End of form-group -->
      </li>
      <br><br>
      <li>
        <div class="form-group">
          <label for="fieldMessage" class="col-sm-2 control-label">Message</label>
          <div class="col-lg-10">
            <textarea name="message" rows="8" cols="80" placeholder="*Message" required></textarea>
          </div>
        </div><!-- End of form-group -->
      </li>
      <br><br>
      <li>
        <div class="form-group">
          <div class="col-sm-4">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div><!-- End of form-group -->
      </li>
    </ul>
  </form>
</div><!-- End of contactUs -->
